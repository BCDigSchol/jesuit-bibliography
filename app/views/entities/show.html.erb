<% if @entity.nil? %>
    <p>This record doesn't exist.</p>
    <%= link_to 'Back', entity_path %>
<% else %>
    <h1>Here is Entity #<%= @entity.id %></h1>

    <div class="record-view">
        <label>Entity Name</label>
        <div class="field-value"><%= @entity.name %></div>

        <label>Entity Sort Name</label>
        <div class="field-value"><%= @entity.sort_name %></div>

        <label>Entity Display Name</label>
        <div class="field-value"><%= @entity.display_name %></div>

        <label>Entity Birth Date</label>
        <div class="field-value"><%= @entity.birth_date %></div>

        <label>Entity Death Date</label>
        <div class="field-value"><%= @entity.death_date %></div>

        <label>Created At</label>
        <div class="field-value"><%= @entity.created_at %></div>

        <label>Updated At</label>
        <div class="field-value"><%= @entity.updated_at %></div>
    </div>
    <%= link_to 'Edit', edit_entity_path(@entity) %> | <%= link_to 'Back', entities_path %>
<% end %>