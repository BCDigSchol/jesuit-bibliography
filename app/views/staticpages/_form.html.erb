<%= simple_form_for @page, url: urlpath, html: { class: "form-horizontal"}, wrapper: :horizontal_form_job  do |form| %>

  <div class="button-group">
    <%= form.button :submit, "Save record", class: "btn btn-primary" %>
    <%= link_to 'Go Back to Static Pages index', staticpages_path, class: 'btn btn-info' %>
  </div>

  <hr/>

  <%= form.input :name, 
      as: :string,
      required: true,
      hint: 'Give a name for this page. This will be displayed as the page\'s title'
  %>

  <%= form.input :slug, 
      as: :string,
      required: true,
      hint: 'Create a slug for this page, e.g. "partners", that will be used in the About page URL. <em><strong>Do not add "about/" to the slug name as it is automatically added to the page URL</strong></em>. Only use alphabetical characters, and avoid spaces'.html_safe
  %>

  <%= form.input :description, 
      as: :string,
      hint: 'A short description for this page. Internal use only'
  %>

  <%#= form.input :rank, 
      as: :string,
      hint: 'How this page will rank in the "About" list on the homepage. A rank of 100 will appear higher on the list than a rank of 10. A rank of 0 will not appear in the list'
  %>

  <div class="form-group row string optional staticpage_body form-group-valid">
        <label class="col-sm-2 col-form-label select">Body</label>
        <div class="col-sm-10">
            <%= form.text_area :body, 
                label: 'body', 
                class: "tinymce",
                rows: 20
                # has id: 'staticpage_body'
            %>
            <%= tinymce :pages, selector: "#staticpage_body" %>
        </div>
    </div>

  <hr/>
  
  <div class="button-group">
    <%= form.button :submit, "Save record", class: "btn btn-primary" %>
    <%= link_to 'Go Back to Static Pages index', staticpages_path, class: 'btn btn-info' %>
  </div>
<% end %>

<script type="text/javascript">
$(document).ready(function() {
    $('.simple_form').parsley().on('field:validated', function() {
        var ok = $('.parsley-error').length === 0;
        $('.bs-callout-info').toggleClass('hidden', !ok);
        $('.bs-callout-warning').toggleClass('hidden', ok);
    });
});
</script>