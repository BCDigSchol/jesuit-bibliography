<%= simple_form_for @page, url: urlpath, html: { class: "form-horizontal"}, wrapper: :horizontal_form_job, validate: true  do |form| %>

  <div class="button-group">
    <%= form.button :submit, "Save record", class: "btn btn-primary" %>
    <%= link_to 'Go Back to Static Pages index', staticpages_path, class: 'btn btn-info' %>
  </div>

  <hr/>

  <% if @page.errors.any? %>
  <div class="panel panel-danger" id="error_explanation">
    <div class="panel-heading"><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</div>
    <div class="panel-body">
      <ul>
        <% @page.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <% end %>

  <%= form.input :name, 
      as: :string,
      hint: 'Give a name for this page. This will be displayed as the page\'s title'
  %>

  <%= form.input :slug, 
      as: :string,
      hint: 'Crate a slug for this page, e.g. "partners", that will be used in the page URL: "/about/partners". Use only alphabetical characters and avoid spaces'
  %>

  <%= form.input :description, 
      as: :string,
      hint: 'A short description for this page'
  %>

  <%#= form.input :rank, 
      as: :string,
      hint: 'How this page will rank in the "About" list on the homepage. A rank of 100 will appear higher on the list than a rank of 10. A rank of 0 will not appear in the list'
  %>

  <div class="form-group row string optional staticpage_body form-group-valid">
        <label class="col-sm-2 col-form-label select">Body</label>
        <div class="col-sm-10">
            <%= form.text_area :body, 
                label: 'body', 
                class: "tinymce",
                rows: 20
                # has id: 'staticpage_body'
            %>
            <%= tinymce :pages, selector: "#staticpage_body" %>
        </div>
    </div>

  <hr/>
  
  <div class="button-group">
    <%= form.button :submit, "Save record", class: "btn btn-primary" %>
    <%= link_to 'Go Back to Static Pages index', staticpages_path, class: 'btn btn-info' %>
  </div>
<% end %>