<div class="panel panel-default bibliography-comment-fields nested-fields">
    <div class="panel-heading">Comment</div>
    <div class="panel-body clearfix">
        <%= form.input :body,
            label: 'Comment text',
            input_html: {rows: '5'}
        %>
        <%= form.input :comment_type, 
            collection: Bibliography::COMMENT_TYPES, 
            selected: 'Note'
        %>
        <%= form.input :make_public, 
            label: false,
            wrapper: :horizontal_boolean_job 
        %>
        
        <%= link_to_remove_association "<btn class='btn btn-danger btn-comment-remove'>Remove #{field_label}</btn>".html_safe, 
            form, 
            class: 'remove-link', 
            form_name: 'form' 
        %>
    </div>
</div>