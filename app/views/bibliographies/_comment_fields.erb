<li class="bibliography-subject-fields nested-fields">
    
    <%= form.input :body,
        label: 'Comment text' 
    %>
    <%= form.input :comment_type, 
        collection: ['Note', 'Research note', 'Note to editor'], 
        selected: 'Note'
    %>
    <%= form.input :commenter, 
        label: 'Commenter',
        as: :string, 
        disabled: true 
    %>
    <%= form.input :make_public %>
    
    <%= link_to_remove_association "x", 
        form, 
        class: 'remove-link', 
        form_name: 'form' 
    %>
</li>