<div id="multimedia_form" class="bib_form">
<%= simple_form_for @bib, html: { class: "form-horizontal"}, wrapper: :horizontal_form_job do |form| %>

    <h3>Multimedia</h3>

    <% if @bib.errors.any? %>
        <div id="error_explanation">
        <h2>
            <%= pluralize(@bib.errors.count, "error") %> prohibited
            this article from being saved:
        </h2>
        <ul>
            <% @bib.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
        </ul>
        </div>
    <% end %>

    <%= form.button :submit, "Save Bibliography", class: "btn btn-primary" %>

    <%= form.input :reference_type, 
        :as => :hidden, 
        :input_html => { :value => "Multimedia" } 
    %>
    
    <%= render 'bibliographies/fields/author', :form => form, field_label: 'Author' %>
    
    <%= form.input :year_published, 
        label: 'Year', 
        as: :string, 
        input_html: { class: 'form-control' }, 
        wrapper_html: { class: 'form-group' } 
    %>

    <%= form.input :title, 
        label: 'Title', 
        as: :string, 
        input_html: { class: 'form-control' }, 
        wrapper_html: { class: 'form-group' } 
    %>

    <%= form.input :multimedia_series, 
        label: 'Series', 
        as: :string, 
        input_html: { class: 'form-control' }, 
        wrapper_html: { class: 'form-group' } 
    %>

    <%= form.input :place_published, 
        label: 'Place published', 
        as: :string, 
        input_html: { class: 'form-control' }, 
        wrapper_html: { class: 'form-group' } 
    %>

    <%= form.input :publisher, 
        label: 'Publisher',
        as: :string, 
        input_html: { class: 'form-control' }, 
        wrapper_html: { class: 'form-group' } 
    %>

    <%= form.input :multimedia_type, 
        label: 'Type of media',
        as: :string, 
        input_html: { class: 'form-control' }, 
        wrapper_html: { class: 'form-group' } 
    %>

    <%= render 'bibliographies/fields/performer', :form => form, field_label: 'Performer' %>

    <%= render 'bibliographies/fields/isbn', :form => form, field_label: 'ISBN' %>

    <%= form.input :worldcat_url, 
        label: 'Worldcat URL',
        as: :string, 
        input_html: { class: 'form-control' }, 
        wrapper_html: { class: 'form-group' } 
    %>

    <%= form.input :multimedia_url, 
        label: 'Multimedia URL',
        as: :string, 
        input_html: { class: 'form-control' }, 
        wrapper_html: { class: 'form-group' } 
    %>

    <%= form.input :multimedia_dimensions, 
        label: 'Multimedia dimensions',
        as: :string, 
        input_html: { class: 'form-control' }, 
        wrapper_html: { class: 'form-group' } 
    %>

    <%= render 'bibliographies/fields/subject', :form => form, field_label: 'Subject' %>

    <%= render 'bibliographies/fields/period', :form => form, field_label: 'Period' %>

    <%= render 'bibliographies/fields/location', :form => form, field_label: 'Location' %>

    <%= render 'bibliographies/fields/entity', :form => form, field_label: 'Entity' %>

    <%= form.input :abstract, 
        label: 'Abstract',
        input_html: { class: 'form-control' }, 
        wrapper_html: { class: 'form-group' } 
    %>

    <%= render 'bibliographies/fields/language', :form => form, field_label: 'Language' %>

    <%= render 'bibliographies/fields/comment', :form => form, field_label: 'Comment' %>

    <br/>
    <%= form.button :submit, "Save Bibliography", class: "btn btn-primary" %>
<% end %>
</div>