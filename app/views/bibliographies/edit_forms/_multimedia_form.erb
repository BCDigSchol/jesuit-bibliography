<div id="multimedia_form" class="bib_form">
<%= simple_form_for @bib, html: { class: "form-horizontal"}, wrapper: :horizontal_form_job do |form| %>

    <h3 class="edit-label"><span class="header-label">Reference Type:</span> Multimedia</h3>

    <div class="button-group">
        <%= form.button :submit, "Save Record", class: "btn btn-primary" %>
        <%= link_to 'Cancel', bibliography_path, class: "btn btn-info" %>
    </div>

    <hr/>

    <%# includes created_by, created_at, status #%>
    <%= render 'bibliographies/fields/common_fields', :form => form %>

    <%= form.input :reference_type, 
        :as => :hidden, 
        :input_html => { :value => "Multimedia" } 
    %>
    
    <%= render 'bibliographies/fields/author', :form => form, field_label: 'Author' %>
    
    <%= form.input :year_published, 
        label: 'Year', 
        as: :string
    %>

    <%= form.input :title, 
        label: 'Title', 
        as: :string
    %>

    <%= render 'bibliographies/fields/series_multimedia', :form => form, field_label: 'Series' %>

    <%= render 'bibliographies/fields/publish_place', :form => form, field_label: 'Place Published' %>

    <%= render 'bibliographies/fields/publisher', :form => form, field_label: 'Publisher' %>

    <%= form.input :multimedia_type, 
        label: 'Type of media',
        as: :string
    %>

    <%= render 'bibliographies/fields/performer', :form => form, field_label: 'Performer' %>

    <%= render 'bibliographies/fields/isbn', :form => form, field_label: 'ISBN' %>

    <%= render 'bibliographies/fields/worldcat_url', :form => form, field_label: 'Worldcat URL' %>

    <%= render 'bibliographies/fields/multimedia_url', :form => form, field_label: 'Multimedia URL' %>

    <%= form.input :multimedia_dimensions, 
        label: 'Multimedia dimensions',
        as: :string
    %>

    <%= render 'bibliographies/fields/subject', :form => form, field_label: 'Subject' %>

    <%= render 'bibliographies/fields/period', :form => form, field_label: 'Century' %>

    <%= render 'bibliographies/fields/location', :form => form, field_label: 'Location' %>

    <%= render 'bibliographies/fields/entity', :form => form, field_label: 'Jesuit' %>

    <%= render 'bibliographies/abstract_field', :form => form %>

    <%= render 'bibliographies/fields/language', :form => form, field_label: 'Language' %>

    <%= render 'bibliographies/fields/comment', :form => form, field_label: 'Comment', c: @bib.comments %>

    <% if can? :update, Tag %>
        <%= render 'bibliographies/fields/tag', :form => form, field_label: 'Tags' %>
    <% end %>

    <hr/>
    
    <div class="button-group">
        <%= form.button :submit, "Save Record", class: "btn btn-primary" %>
        <%= link_to 'Cancel', bibliography_path, class: "btn btn-info" %>
    </div>
<% end %>
</div>