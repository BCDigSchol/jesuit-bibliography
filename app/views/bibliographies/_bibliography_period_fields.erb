<div class='nested-fields'>
    <%= form.input :period, wrapper: :vertical_input_group_job do %>
        <%= form.association :period, 
            label: false,
            collection: Period.order(:sort_name), 
            prompt: prompt_label, 
            form_name: 'form',
            hint: Bibliography::TERM_FIELD_HINT,
            input_html: {
                class: class_name,
                "data-url": citationterms_search_path
            }
        %>
        <span class="input-group-btn" id="basic-addon-period">
            <%= link_to_remove_association "<btn class='btn btn-danger btn-remove'>X</btn>".html_safe, 
                form, 
                class: 'remove-link', 
                form_name: 'form' 
            %>
        </span>
    <% end %>
</div>