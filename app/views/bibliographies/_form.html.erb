<%= simple_form_for @bib do |form| %>

  <% if @bib.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@bib.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @bib.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.input :reference_type, priority: ['Book'], collection: ['Book', 'Book chapter', 'Book review', 'Journal article', 'Dissertation', 'Conference paper', 'Multimedia'], input_html: { class: 'form-control' }, wrapper_html: { class: 'form-group' } %>

  <h4>Author</h4>
  <div id='bibliography_author'>
    <%= form.simple_fields_for :authors do |c| %>
      <%= c.input :display_name, as: :string, input_html: { class: 'form-control' }, wrapper_html: { class: 'form-group' } %>
    <% end %>
  </div>
  <div class='links'>
    <%= link_to_add_association 'Add Author', form, :authors, association: 'authors', class: 'btn btn-warning', form_name: 'form', data: {'association-insertion-node' => '#bibliography_author', 'association-insertion-method' => 'append'}, partial: 'bibliography_citation_fields' %>
  </div>

  <h4>Editor</h4>
  <div id='bibliography_editor'>
    <%= form.simple_fields_for :editors do |c| %>
      <%= c.input :display_name, as: :string, input_html: { class: 'form-control' }, wrapper_html: { class: 'form-group' } %>
    <% end %>
  </div>
  <div class='links'>
    <%= link_to_add_association 'Add Editor', form, :editors, association: 'editors', class: 'btn btn-warning', form_name: 'form', data: {'association-insertion-node' => '#bibliography_editor', 'association-insertion-method' => 'append'}, partial: 'bibliography_citation_fields' %>
  </div>

  <h4>Author of Review</h4>
  <div id='bibliography_author_of_review'>
    <%= form.simple_fields_for :author_of_reviews do |c| %>
