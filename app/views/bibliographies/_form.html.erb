  <h4>ISSN</h4>
  <div id='bibliography_issn'>
    <%= form.simple_fields_for :issns do |c| %>
      <%= c.input :value, as: :string, input_html: { class: 'form-control' }, wrapper_html: { class: 'form-group' } %>
    <% end %>
  </div>
  <div class='links'>
    <%= link_to_add_association 'Add ISSN', form, :issns, association: 'issns', class: 'btn btn-warning', form_name: 'form', data: {'association-insertion-node' => '#bibliography_issn', 'association-insertion-method' => 'append'}, partial: 'bibliography_standard_identifier_fields' %>
  </div>

  <h4>DOI</h4>
  <div id='bibliography_doi'>
    <%= form.simple_fields_for :dois do |c| %>
      <%= c.input :value, as: :string, input_html: { class: 'form-control' }, wrapper_html: { class: 'form-group' } %>
    <% end %>
  </div>
  <div class='links'>
    <%= link_to_add_association 'Add DOI', form, :dois, association: 'dois', class: 'btn btn-warning', form_name: 'form', data: {'association-insertion-node' => '#bibliography_doi', 'association-insertion-method' => 'append'}, partial: 'bibliography_standard_identifier_fields' %>
  </div>

  <h4>Subjects</h4>
  <div id='bibliography_subjects'>
    <%= form.simple_fields_for :bibliography_subjects do |subject| %>
      <%= render 'bibliography_subject_fields', :form => subject %>
    <% end %>
  </div>
  <div class='links'>
    <%= link_to_add_association 'Add Subject', form, :bibliography_subjects, class: 'btn btn-warning', form_name: 'form', data: {'association-insertion-node' => '#bibliography_subjects', 'association-insertion-method' => 'append'} %>
