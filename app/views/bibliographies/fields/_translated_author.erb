<div id='bibliography_translated_authors' class='repeatable-field'>
    <div class="row string optional bibliography-person-fields">
        <label class="col-sm-2 col-form-label string optional"><%= field_label.pluralize(2) %></label>
        <div class="col-sm-10">
            <div class="fields">
                <%= form.simple_fields_for :translated_authors do |peep| %>
                    <%= render 'bibliography_person_fields', 
                        form: peep,
                        class_name: 'translated_authors', 
                        prompt_label: 'Choose a ' + field_label 
                    %>
                <% end %>
            </div>
        </div>
    </div>
    <div id="bibliography_translated_author_suggestions">
        <%= form.simple_fields_for :person_suggestions do |suggestion| %>
            <% if suggestion.object.field_name == 'translated_author' %>
                <%= render 'suggest_person_fields', :form => suggestion, fieldname: 'translated_author' %>
             <% end %>   
        <% end %>
    </div>
    <div class='links clearfix'>
        <div class="col-sm-2"></div>
        <div class="col-sm-10 btn-add-container">
            <%= link_to_add_association Bibliography::ADD_BUTTON + field_label, 
                form, 
                :translated_authors, 
                class: 'btn btn-warning btn-add fa-icon', 
                form_name: 'form', 
                data: {
                    'association-insertion-node' => '#bibliography_translated_authors .fields', 
                    'association-insertion-method' => 'append'
                },
                partial: 'bibliography_person_fields',
                render_options:  {
                    locals: { 
                        prompt_label: 'Choose a ' + field_label, 
                        class_name: 'translated_authors' 
                    }
                }
            %>
            <%= link_to_add_association 'Suggest a new ' + field_label, 
                form, 
                :person_suggestions, 
                class: 'btn btn-warning btn-add', 
                form_name: 'form',
                data: {
                    'association-insertion-node' => '#bibliography_translated_author_suggestions', 
                    'association-insertion-method' => 'append'
                }, 
                partial: 'suggest_person_fields',
                render_options: {locals: {fieldname: 'translated_author'}}
            %>
        </div>
    </div>
</div>

<script>
$(document).ready(function() {
    $('.translated_authors').select2( select2_config(".translated_authors", "people") );
    $("#bibliography_translated_authors").on('cocoon:after-insert', function(e, insertedItem){
        $('.translated_authors').last().select2( select2_config(".translated_authors", "people") );
    });
});
</script>