<% required_status = true %>
<% pretend_required = pretend_required ||= false %>
<div id='publish_places' class='repeatable-field'>
  <div class="row string optional bibliography-publishers-fields">
    <label class="col-sm-2 col-form-label string optional">
      Place Published <abbr title="required">*</abbr>
    </label>
    <div class="col-sm-10">
      <div class="fields">
        <%= form.simple_fields_for :publish_places do |place| %>
          <%= render 'bibliographies/publish_place_fields',
                     form: place,
                     locals: {
                       form: place,
                       required_status: required_status
                     }
          %>
        <% end %>
      </div>
    </div>
  </div>
  <div class='links clearfix'>
    <div class="col-sm-2"></div>
    <div class="col-sm-10 btn-add-container">
      <%= link_to_add_association Bibliography::ADD_BUTTON + field_label,
                                  form,
                                  :publish_places,
                                  class: 'btn btn-warning btn-add fa-icon',
                                  form_name: 'form',
                                  data: {
                                    'association-insertion-node' => '#publish_places .fields',
                                    'association-insertion-method' => 'append'
                                  },
                                  partial: 'publish_place_fields',
                                  render_options: {locals: {required_status: required_status}}
      %>
    </div>
  </div>
</div>