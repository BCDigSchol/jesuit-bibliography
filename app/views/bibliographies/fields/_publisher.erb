<div id='publishers' class='repeatable-field'>
    <div class="fields">
        <%= form.simple_fields_for :publishers do |c| %>
            <%= c.input :name, 
                label: field_label,
                as: :string,
                required: required_status,
                validate: required_status
            %>
        <% end %>
    </div>
    <div class='links clearfix'>
        <div class="col-sm-2"></div>
        <div class="col-sm-10 btn-add-container">
            <%= link_to_add_association Bibliography::ADD_BUTTON + field_label, 
                form, 
                :publishers,
                class: 'btn btn-warning btn-add fa-icon', 
                form_name: 'form', 
                data: {
                    'association-insertion-node' => '#publishers .fields', 
                    'association-insertion-method' => 'append'
                }, 
                partial: 'publisher_fields' 
            %>
        </div>
    </div>
</div>