<div id='series_multimedias' class='repeatable-field'>
    <div class="fields">
        <%= form.simple_fields_for :series_multimedium do |c| %>
            <%= c.input :name, 
                label: field_label,
                as: :string
            %>
        <% end %>
    </div>
    <div class='links clearfix'>
        <div class="col-sm-2"></div>
        <div class="col-sm-10 btn-add-container">
            <%= link_to_add_association Bibliography::ADD_BUTTON + field_label, 
                form, 
                :series_multimedium,
                class: 'btn btn-warning btn-add fa-icon', 
                form_name: 'form', 
                data: {
                    'association-insertion-node' => '#series_multimedias .fields', 
                    'association-insertion-method' => 'append'
                }, 
                partial: 'series_multimedia_fields' 
            %>
        </div>
    </div>
</div>