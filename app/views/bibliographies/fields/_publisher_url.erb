<div id='publisher_urls' class='repeatable-field'>
    <div class="fields">
        <%= form.simple_fields_for :publisher_urls do |c| %>
            <%= c.input :link, 
                label: field_label,
                as: :string, 
                hint: 'URL must start with http:// or https://'
            %>
        <% end %>
    </div>
    <div class='links clearfix'>
        <div class="col-sm-2"></div>
        <div class="col-sm-10 btn-add-container">
            <%= link_to_add_association 'Add ' + field_label, 
                form, 
                :publisher_urls,
                class: 'btn btn-warning btn-add', 
                form_name: 'form', 
                data: {
                    'association-insertion-node' => '#publisher_urls .fields', 
                    'association-insertion-method' => 'append'
                }, 
                partial: 'url_fields' 
            %>
        </div>
    </div>
</div>