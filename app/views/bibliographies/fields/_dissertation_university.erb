<div id='dissertation_universities' class='repeatable-field'>
    <div class="fields">
        <%= form.simple_fields_for :dissertation_universities do |c| %>
            <%= c.input :name, 
                label: field_label,
                as: :string,
                required: required_status,
                validate: required_status
            %>
        <% end %>
    </div>
    <div class='links clearfix'>
        <div class="col-sm-2"></div>
        <div class="col-sm-10 btn-add-container">
            <%= link_to_add_association Bibliography::ADD_BUTTON + field_label, 
                form, 
                :dissertation_universities,
                class: 'btn btn-warning btn-add fa-icon', 
                form_name: 'form', 
                data: {
                    'association-insertion-node' => '#dissertation_universities .fields', 
                    'association-insertion-method' => 'append'
                }, 
                partial: 'dissertation_university_fields',
                render_options:  {
                    locals: {
                        required_status: required_status
                    }
                }
            %>
        </div>
    </div>
</div>