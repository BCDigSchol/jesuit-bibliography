<div class='form-group repeatable-field'>
    <label class="col-sm-2 col-form-label"><%= field_label + 's'%></label>
    <div class="col-sm-10 btn-add-container">
        <div id="bibliography_reviewed_components" class='repeatable-field'>
            <div class="fields">
                <%= form.simple_fields_for :reviewed_components do |rc| %>
                    <div class="panel panel-default bibliography-subject-fields nested-fields">
                        <div class="panel-heading"><%= field_label %></div>
                        <div class="panel-body clearfix">
                            <%= rc.input :reviewed_author,
                                label: 'Reviewed Author' 
                            %>
                            <%= rc.input :reviewed_editor,
                                label: 'Reviewed Editor' 
                            %>
                            <%= rc.input :reviewed_translator,
                                label: 'Reviewed Translator' 
                            %>
                            <%= rc.input :reviewed_title, 
                                label: 'Reviewed Title' 
                            %>

                            <%= link_to_remove_association "<btn class='btn btn-danger btn-comment-remove'>Remove #{field_label}</btn>".html_safe, 
                                form, 
                                class: 'remove-link', 
                                form_name: 'form' 
                            %>
                        </div>
                    </div>
                <% end %>
            </div>
            <div class='links clearfix'>
                <%= link_to_add_association Bibliography::ADD_BUTTON + field_label, 
                    form, 
                    :reviewed_components, 
                    class: 'btn btn-warning fa-icon', 
                    form_name: 'form', 
                    data: {
                        'association-insertion-node' => '#bibliography_reviewed_components .fields', 
                        'association-insertion-method' => 'append'
                    }, 
                    partial: 'reviewed_components_fields',
                    render_options:  {
                        locals: { 
                            field_label: field_label
                        }
                    }
                %>
            </div>
        </div>
    </div>
</div>