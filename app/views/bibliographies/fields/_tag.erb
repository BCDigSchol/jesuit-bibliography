<div id='tags' class='repeatable-field'>
    <div class="fields">
        <%= form.simple_fields_for :tags do |c| %>
            <%= c.input :name, 
                label: field_label,
                as: :string
            %>
        <% end %>
    </div>
    <div class='links clearfix'>
        <div class="col-sm-2"></div>
        <div class="col-sm-10 btn-add-container">
            <%= link_to_add_association Bibliography::ADD_BUTTON + ' Tag', 
                form, 
                :tags,
                class: 'btn btn-warning btn-add fa-icon', 
                form_name: 'form', 
                data: {
                    'association-insertion-node' => '#tags .fields', 
                    'association-insertion-method' => 'append'
                }, 
                partial: 'tag_fields' 
            %>
        </div>
    </div>
</div>