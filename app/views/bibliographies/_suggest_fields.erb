<div class="form-group row string optional bibliography_suggestion_field">
    <label class="col-sm-2 col-form-label string optional">
        <i class="far fa-comment-alt"></i>
        <span class="sr-only">Suggested field</span>
    </label>
    <div class="col-sm-10">
        <div class="panel panel-info bibliography-suggest-fields nested-fields">
            <div class="panel-heading">Suggestion for: <strong><%= fieldname.capitalize %></strong></div>
            <div class="panel-body clearfix">
                <%= form.input :name,
                    as: :string,
                    label: 'Suggested name'
                %>
                <%= form.input :note %>
                
                <%= link_to_remove_association "<btn class='btn btn-danger btn-comment-remove'>Remove #{fieldname.capitalize} suggestion</btn>".html_safe, 
                    form, 
                    class: 'remove-link', 
                    form_name: 'form',
                    wrapper_class: 'bibliography_suggestion_field'
                %>
            </div>
        </div>
    </div>
</div>