<div class='bibliography-citation-fields nested-fields form-group row'>
    <%= form.input :display_name, wrapper: :vertical_input_group do %>
        <%= form.input :display_name, 
            label: false,
            as: :string,
            label_html: { class: 'invisible' },
            hint: BibliographiesController::PERSON_FIELD_HINT
        %>
        <span class="input-group-btn" id="basic-addon-citation">
            <%= link_to_remove_association "<btn class='btn btn-danger btn-remove'>X</btn>".html_safe, 
                form,
                class: 'remove-link', 
                form_name: 'form' 
            %>
        </span>
    <% end %>
</div>