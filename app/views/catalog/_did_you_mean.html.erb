<% if should_show_spellcheck_suggestions? @response %>

  <%# Responses with more than four values are usually errors. %>
  <% if @response.spelling.words.length < 5 %>
    <div id="spell">
      <h4 class="suggest">
        <em><%= t('blacklight.did_you_mean', :options => safe_join(@response.spelling.words.map { |word| link_to_query(word) }, " #{t('blacklight.or')} ")).html_safe %></em>
      </h4>
    </div>
  <% end %>

<% end %>
