<% if @location.nil? %>
    <p>This record doesn't exist.</p>
    <%= link_to 'Go Back to Location index', location_path %>
<% else %>
    <h1>Location #<%= @location.id %></h1>

    <div class="record-view">
        <%= link_to 'Edit this record', edit_location_path(@location), class: 'btn btn-primary' %>
        <%= link_to 'Go Back to Location index', locations_path, class: 'btn btn-info' %>
        
        <hr/>

        <div class="field-pair row">
            <label class="col-sm-2">Location Name</label>
            <div class="field-value col-sm-10"><%= @location.name %></div>
        </div>

        <div class="field-pair row">
            <label class="col-sm-2">Location Sort Name</label>
            <div class="field-value col-sm-10"><%= @location.sort_name %></div>
        </div>

        <div class="field-pair row">
            <label class="col-sm-2">Created At</label>
            <div class="field-value col-sm-10"><%= @location.created_at %></div>
        </div>

        <div class="field-pair row">
            <label class="col-sm-2">Updated At</label>
            <div class="field-value col-sm-10"><%= @location.updated_at %></div>
        </div>

        <hr/>

        <%= link_to 'Edit this record', edit_location_path(@location), class: 'btn btn-primary' %>
        <%= link_to 'Go Back to Location index', locations_path, class: 'btn btn-info' %>
    </div>
<% end %>