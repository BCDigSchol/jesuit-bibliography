<% if @location.nil? %>
    <p>This record doesn't exist.</p>
    <%= link_to 'Back', location_path %>
<% else %>
    <h1>Here is Location #<%= @location.id %></h1>

    <div class="record-view">
        <label>Location Name</label>
        <div class="field-value"><%= @location.name %></div>

        <label>Location Sort Name</label>
        <div class="field-value"><%= @location.sort_name %></div>

        <label>Created At</label>
        <div class="field-value"><%= @location.created_at %></div>

        <label>Updated At</label>
        <div class="field-value"><%= @location.updated_at %></div>
    </div>
    <%= link_to 'Edit', edit_location_path(@location) %> | <%= link_to 'Back', locations_path %>
<% end %>