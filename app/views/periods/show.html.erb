<% if @period.nil? %>
    <p>This record doesn't exist.</p>
    <%= link_to 'Go Back to Periods index', periods_path %>
<% else %>
    <h1>Period #<%= @period.id %></h1>

    <div class="record-view">
        <%= link_to 'Edit this record', edit_period_path(@period), class: 'btn btn-primary' %>
        <%= link_to 'Go Back to Period index', periods_path, class: 'btn btn-info' %>

        <hr/>

        <div class="field-pair row">
            <label class="col-sm-2">Period Name</label>
            <div class="field-value col-sm-10"><%= @period.name %></div>
        </div>

        <div class="field-pair row">
            <label class="col-sm-2">Period Sort Name</label>
            <div class="field-value col-sm-10"><%= @period.sort_name %></div>
        </div>

        <div class="field-pair row">
            <label class="col-sm-2">Created At</label>
            <div class="field-value col-sm-10"><%= @period.created_at %></div>
        </div>

        <div class="field-pair row">
            <label class="col-sm-2">Updated At</label>
            <div class="field-value col-sm-10"><%= @period.updated_at %></div>
        </div>

        <hr/>

        <%= link_to 'Edit this record', edit_period_path(@period), class: 'btn btn-primary' %>
        <%= link_to 'Go Back to Period index', periods_path, class: 'btn btn-info' %>
    </div>
<% end %>