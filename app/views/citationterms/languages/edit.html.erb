<% if @language.nil? %>
    <p>This record doesn't exist.</p>
    <%= link_to 'Go Back to Languages index', citationterms_languages_path, class: 'btn btn-info' %>
<% elsif can? :edit, Language %>
    <h2 class="edit-label"><span class="header-label">Editing Language:</span> <%= @language.name.present? ? @language.name : @language.id %></h2>
    
    <%= render 'citationterms/update_alert', model_type: 'language', record_id: @language.id %>

    <%= render 'error_messages' %>

    <%= render 'form', urlpath: citationterms_language_path %>

    <%= render 'error_messages' %>
<% else %>
    <%= render 'bibliographies/not_permitted' %>
<% end %>