<%= simple_form_for @subject, url: urlpath, html: { class: "form-horizontal"}, wrapper: :horizontal_form_job do |form| %>

  <div class="button-group">
    <%= form.button :submit, "Save Record", class: "btn btn-primary" %>
    <%= link_to 'Cancel', citationterms_subjects_path, class: 'btn btn-info' %>
  </div>

  <hr/>

  <%= form.input :name, 
      as: :string,
      required: true
  %>

  <%= form.input :sort_name, 
      as: :string,
      disabled: !@subject.name.present?,
      placeholder: (!@subject.name.present? ? BibliographySubject::NAME_PLACEHOLDER : '') 
  %>

  <hr/>
  
  <div class="button-group">
    <%= form.button :submit, "Save Record", class: "btn btn-primary" %>
    <%= link_to 'Cancel', citationterms_subjects_path, class: 'btn btn-info' %>
  </div>
<% end %>

<script type="text/javascript">
$(document).ready(function() {
    $('.simple_form').parsley().on('field:validated', function() {
        var ok = $('.parsley-error').length === 0;
        $('.bs-callout-info').toggleClass('hidden', !ok);
        $('.bs-callout-warning').toggleClass('hidden', ok);
    });
});
</script>