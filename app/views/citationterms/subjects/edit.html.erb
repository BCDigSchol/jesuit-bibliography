<% if @subject.nil? %>
    <p>This record doesn't exist.</p>
    <%= link_to 'Go Back to Subject Records index', citationterms_subjects_path %>
<% elsif can? :edit, Subject %>
    <h2 class="edit-label"><span class="header-label">Editing Subject:</span> <%= @subject.name.present? ? @subject.name : @subject.id %></h2>

    <%= render 'citationterms/update_alert', model_type: 'subject', record: @subject %>

    <%= render 'error_messages' %>

    <%= render 'form', urlpath: citationterms_subject_path %>

    <%= render 'error_messages' %>
<% else %>
    <%= render 'bibliographies/not_permitted' %>
<% end %>