<% if @subject.nil? %>
    <p>This record doesn't exist.</p>
    <%= link_to 'Go Back to Subject Records index', citationterms_subjects_path %>
<% elsif can? :edit, Subject %>
    <h1>Editing Subject Record: <%= @subject.name.present? ? @subject.name : @subject.id %></h1>

    <%= render 'form', urlpath: citationterms_subject_path %>
<% else %>
    <%= render 'bibliographies/not_permitted' %>
<% end %>