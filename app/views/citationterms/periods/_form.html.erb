<%= simple_form_for @period, url: urlpath do |form| %>
  <%= form.button :submit, "Save record", class: "btn btn-primary" %>
  <%= link_to 'Go Back to Century terms index', citationterms_periods_path, class: 'btn btn-info' %>

  <hr/>

  <% if @period.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@period.errors.count, "error") %> prohibited
        this Century term from being saved:
      </h2>
      <ul>
        <% @period.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form.input :name, as: :string, input_html: { class: 'form-control' }, wrapper_html: { class: 'form-group' } %>

  <%= form.input :sort_name, as: :string, input_html: { class: 'form-control' }, wrapper_html: { class: 'form-group' } %>

  <hr/>
  <%= form.button :submit, "Save record", class: "btn btn-primary" %>
  <%= link_to 'Go Back to Century terms index', citationterms_periods_path, class: 'btn btn-info' %>
<% end %>