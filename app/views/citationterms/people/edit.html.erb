<% if @person.nil? %>
    <p>This record doesn't exist.</p>
    <%= link_to 'Go Back to People terms index', citationterms_people_path %>
<% elsif can? :edit, Person %>
    <h2 class="edit-label"><span class="header-label">Editing Person:</span> <%= @person.name.present? ? @person.name : @person.id %></h2>

    <%= render 'citationterms/update_alert', model_type: 'person', record: @person %>

    <%= render 'error_messages' %>

    <%= render 'form', urlpath: citationterms_person_path %>

    <%= render 'error_messages' %>
<% else %>
    <%= render 'bibliographies/not_permitted' %>
<% end %>