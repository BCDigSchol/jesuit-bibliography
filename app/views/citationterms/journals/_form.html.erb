<%= simple_form_for @journal, url: urlpath, html: { class: "form-horizontal"}, wrapper: :horizontal_form_job do |form| %>

  <div class="button-group">
    <%= form.button :submit, "Save record", class: "btn btn-primary" %>
    <%= link_to 'Cancel', citationterms_journals_path, class: 'btn btn-info' %>
  </div>

  <hr/>

  <%= form.input :name, 
      as: :string,
      required: true
  %>

  <%= form.input :sort_name, 
      as: :string,
      disabled: !@journal.name.present?,
      placeholder: (!@journal.name.present? ? BibliographyJournal::NAME_PLACEHOLDER : '')
  %>

  <%#= form.input :display_name, 
      as: :string,
      disabled: !@journal.name.present?,
      placeholder: (!@journal.name.present? ? BibliographyJournal::NAME_PLACEHOLDER : '')
  %>

  <hr/>
  
  <div class="button-group">
    <%= form.button :submit, "Save record", class: "btn btn-primary" %>
    <%= link_to 'Cancel', citationterms_languages_path, class: 'btn btn-info' %>
  </div>
<% end %>

<script type="text/javascript">
$(document).ready(function() {
    $('.simple_form').parsley().on('field:validated', function() {
        var ok = $('.parsley-error').length === 0;
        $('.bs-callout-info').toggleClass('hidden', !ok);
        $('.bs-callout-warning').toggleClass('hidden', ok);
    });
});
</script>