<%= simple_form_for @thesis_type, url: urlpath, html: { class: "form-horizontal"}, wrapper: :horizontal_form_job do |form| %>

  <div class="button-group">
    <%= form.button :submit, "Save record", class: "btn btn-primary" %>
    <%= link_to 'Cancel', citationterms_thesis_types_path, class: 'btn btn-info' %>
  </div>

  <hr/>

  <%= form.input :name, 
      as: :string,
      required: true
  %>

  <%= form.input :citation_style, 
      label: 'Citation Style',
      collection: BibliographyThesisType::CITATION_STYLE_LIST,
      include_blank: 'Select a citation style',
      hint: BibliographyThesisType::CITATION_STYLE_PLACEHOLDER
  %>

  <hr/>
  
  <div class="button-group">
    <%= form.button :submit, "Save record", class: "btn btn-primary" %>
    <%= link_to 'Cancel', citationterms_thesis_types_path, class: 'btn btn-info' %>
  </div>
<% end %>

<script type="text/javascript">
$(document).ready(function() {
    $('.simple_form').parsley().on('field:validated', function() {
        var ok = $('.parsley-error').length === 0;
        $('.bs-callout-info').toggleClass('hidden', !ok);
        $('.bs-callout-warning').toggleClass('hidden', ok);
    });
});
</script>