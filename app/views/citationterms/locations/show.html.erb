<% if @location.nil? %>
    <p>This record doesn't exist.</p>
    <%= link_to 'Go Back to Location Terms index', citationterms_location_path %>
<% elsif can? :read, Location %>
    <h1>Viewing Location: <%= @location.name.present? ? @location.name : @location.id %></h1>

    <div class="record-view">
        <% if can? :update, Location %>
        <%= link_to 'Edit this record', edit_citationterms_location_path(@location), class: 'btn btn-primary' %>
        <% end %>
        <%= link_to 'Go Back to Location terms index', citationterms_locations_path, class: 'btn btn-info' %>
        
        <hr/>

        <div class="field-pair row">
            <label class="col-sm-2">Location Name</label>
            <div class="field-value col-sm-10"><%= @location.name %></div>
        </div>

        <div class="field-pair row">
            <label class="col-sm-2">Location Sort Name</label>
            <div class="field-value col-sm-10"><%= @location.sort_name %></div>
        </div>

        <div class="field-pair row">
            <label class="col-sm-2">Created At</label>
            <div class="field-value col-sm-10"><%= @location.created_at %></div>
        </div>

        <div class="field-pair row">
            <label class="col-sm-2">Updated At</label>
            <div class="field-value col-sm-10"><%= @location.updated_at %></div>
        </div>

        <div class="field-pair row">
            <label class="col-sm-2">Created By</label>
            <div class="field-value col-sm-10"><%= @location.created_by %></div>
        </div>

        <% if @location.modified_by.present? %>
        <div class="field-pair row">
            <label class="col-sm-2">Last Modified By</label>
            <div class="field-value col-sm-10"><%= @location.modified_by %></div>
        </div>
        <% end %>

        <hr/>

        <% if can? :update, Location %>
        <%= link_to 'Edit this record', edit_citationterms_location_path(@location), class: 'btn btn-primary' %>
        <% end %>
        <%= link_to 'Go Back to Location terms index', citationterms_locations_path, class: 'btn btn-info' %>
    </div>
<% else %>
    <%= render 'bibliographies/not_permitted' %>
<% end %>