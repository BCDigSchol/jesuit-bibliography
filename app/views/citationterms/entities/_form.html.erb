<%= simple_form_for @entity, url: urlpath, html: { class: "form-horizontal"}, wrapper: :horizontal_form_job, validate: true  do |form| %>

  <div class="button-group">
    <%= form.button :submit, "Save record", class: "btn btn-primary" %>
    <%= link_to 'Cancel', citationterms_entities_path, class: 'btn btn-info' %>
  </div>

  <hr/>

  <% if @entity.errors.any? %>
  <div class="panel panel-danger" id="error_explanation">
    <div class="panel-heading"><%= pluralize(@entity.errors.count, "error") %> prohibited this Jesuit record from being saved:</div>
    <div class="panel-body">
      <ul>
        <% @entity.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <% end %>

  <%= form.input :name, 
      as: :string,
      hint: Bibliography::PERSON_FIELD_HINT
  %>

  <%= form.input :sort_name, 
      as: :string,
      disabled: !@entity.name.present?,
      placeholder: (!@entity.name.present? ? BibliographyEntity::NAME_PLACEHOLDER : '') 
  %>

  <%#= form.input :display_name, 
      as: :string,
      disabled: !@entity.name.present?,
      placeholder: (!@entity.name.present? ? BibliographyEntity::NAME_PLACEHOLDER : '')
  %>

  <%= form.input :birth_date, 
      as: :string 
  %>

  <%= form.input :death_date, 
      as: :string 
  %>

  <hr/>
  
  <div class="button-group">
    <%= form.button :submit, "Save record", class: "btn btn-primary" %>
    <%= link_to 'Cencel', citationterms_entities_path, class: 'btn btn-info' %>
  </div>
<% end %>