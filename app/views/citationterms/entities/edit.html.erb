<% if @entity.nil? %>
    <p>This record doesn't exist.</p>
    <%= link_to 'Go Back to Jesuits index', citationterms_entities_path, class: 'btn btn-info' %>
<% elsif can? :edit, Entity %>
    <h1>Editing Jesuit: <%= @entity.name.present? ? @entity.name : @entity.id %></h1>

    <%= render 'form', urlpath: citationterms_entity_path %>
<% else %>
    <%= render 'bibliographies/not_permitted' %>
<% end %>